{
    "name": "cad-script",
    "description": "Please enter a brief description here",
    "version": "0.0.1",
    "files": [
        "out",
        "src"
    ],
    "type": "module",
    "scripts": {
        "build:vscode": "tsc -b tsconfig.json && node esbuild.mjs",
        "build:lib": "tsup",
        "watch": "concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.json --watch\" \"node esbuild.mjs --watch\"",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "prepublishOnly": "yarn run build:lib",
        "langium:watch": "langium generate --watch",
        "vscode:prepublish": "yarn run build:vscode && yarn run lint"
    },
    "dependencies": {
        "langium": "~3.0.0",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "~1.67.0",
        "@typescript-eslint/eslint-plugin": "~6.4.1",
        "@typescript-eslint/parser": "~6.4.1",
        "concurrently": "~8.2.1",
        "esbuild": "~0.19.2",
        "eslint": "~8.47.0",
        "langium-cli": "~3.0.0",
        "tsup": "^8.0.2",
        "typescript": "~5.1.6"
    },
    "displayName": "cad-script",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "cad-script",
                "aliases": [
                    "Cad Script",
                    "cad-script"
                ],
                "extensions": [
                    ".sketch"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "cad-script",
                "scopeName": "source.cad-script",
                "path": "syntaxes/cad-script.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:cad-script"
    ],
    "main": "./out/extension/main.cjs"
}
