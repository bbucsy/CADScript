{
  "name": "cad-script",
  "scopeName": "source.cad-script",
  "fileTypes": [
    ".sketch"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.cad-script",
      "match": "\\b(Arc|Circle|Constrain|Line|PI|Point|Sketch|angle|arc|circle|cm|coincident|cos|deg|dm|for|ft|helper|horizontal|import|in|line|m|mm|mod|on|parallel|parameter|partial|perpendicular|point|point2line|point2point|pow|rad|samelength|sin|tan|tangent|th|to|vertical|with|yd)\\b|\\b(angle:|arc:|at:|center:|circle:|default:|diameter:|direction:|distance:|end:|from:|length:|line:|point:|radius:|start:|to:)\\B|\\B(\\[bisector\\])\\B"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.cad-script"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.cad-script"
        }
      ]
    }
  }
}
