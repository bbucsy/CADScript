{
  "compilerOptions": {
    "target": "ES2023",
    "module": "Node16",
    "lib": ["es2023"],
    "sourceMap": true,
    "outDir": "out",
    "composite": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["out", "node_modules"],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
