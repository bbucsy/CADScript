{
	"name": "cad-script",
	"scopeName": "source.cad-script",
	"fileTypes": [".sketch"],
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"name": "keyword.control.cad-script",
			"match": "\\b(and|angle|around|as|at|defaults|distance|do|end|from|horizontal|length|perpendicular|radius|samelength|to|vertical)\\b"
		},
		{
			"name": "support.type.cad-script",
			"match": "\\b(Arc|Circle|Line|Point|Sketch)\\b"
		},
		{
			"name": "keyword.other.cad-script",
			"match": "\\b(cm|deg|dm|ft|in|m|mm|rad|th|yd)\\b"
		},
		{
			"name": "support.function.cad-script",
			"match": "\\b(define|add|import|constrain|times)\\b"
		},
		{
			"name": "support.class.cad-script",
			"match": "\\b(Sketch|partial)\\b"
		},
		{
			"name": "constant.language.cad-script",
			"match": "\\b(X|Y)\\b"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "//",
					"beginCaptures": {
						"1": {
							"name": "punctuation.whitespace.comment.leading.cad-script"
						}
					},
					"end": "(?=$)",
					"name": "comment.line.cad-script"
				}
			]
		}
	}
}
